
@model AddProfileImage

@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">yazar profil bilgileri edit</h4>
                <br />
                @Html.HiddenFor(x=>x.Id,new{@class="form-control"})
                <div class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">yzar ad sayad</label>
                        @*<input type="text" class="form-control" id="exampleInputName1" placeholder="Name">*@
                        @Html.TextBoxFor(x=>x.Name,new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Email address</label>
                        @Html.TextBoxFor(x=>x.Mail,new {@class="form-control"})
                        @*<input type="email" class="form-control" id="exampleInputEmail3" placeholder="Email">*@
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">sifre</label>
                        @Html.TextBoxFor(x=>x.Password,new {@class="form-control"})
                        @*<input type="password" class="form-control" id="exampleInputPassword4" placeholder="Password">*@
                    </div>

                    <div class="form-group">
                        <label>fotograf</label>
                        <input type="file" name="Image">
                    </div>

                    <div class="form-group">
                        <label for="exampleTextarea1">hakkinda</label>
                        @Html.TextAreaFor(x=>x.About,10,3,new {@class="form-control"})
                        @*<textarea class="form-control" id="exampleTextarea1" rows="4"></textarea>*@
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">guncelle</button>
                    <button class="btn btn-light">iptal</button>
                </div>
            </div>
        </div>
    </div>
</form>

