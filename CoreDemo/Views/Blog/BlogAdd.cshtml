@using EntityLayer.Concrete;
@model Blog

@{
    ViewData["Title"] = "BlogAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>BlogAdd</h1>

@using (Html.BeginForm("BlogAdd", "Blog", FormMethod.Post))
{
    @Html.Label("baslik")
    @Html.TextBoxFor(x=>x.Title,new {@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Title)
    <br />
    @Html.Label("image")
    @Html.TextBoxFor(x=>x.Image,new {@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Image)
    <br />
    @Html.Label("thum image")
    @Html.TextBoxFor(x=>x.ThumbnailImage,new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.ThumbnailImage)
    <br />
    @Html.Label("kategori")
    @*@Html.TextBoxFor(x=>x.CategoryId,new{@class="form-control"})*@
    @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.CategoryList,new{@class="form-control"})

    <br />
    @Html.Label("icerik")
    @Html.TextAreaFor(x=>x.Content,15,3,new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Content)

    <br />
    <button class="btn btn-info"> kaydet</button>
}